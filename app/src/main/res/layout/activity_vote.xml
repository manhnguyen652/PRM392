<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".VoteActivity">

    <TextView
        android:id="@+id/text_view_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Thời gian còn lại: 04:30"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Trưa nay ăn gì?"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:id="@+id/radio_group_vote_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Radio buttons will be added dynamically -->
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_ranking_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:minHeight="200dp"/>

    <LinearLayout
        android:id="@+id/layout_random_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- Content will be added dynamically -->
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_submit_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận bình chọn"
        android:padding="12dp"/>

</LinearLayout>